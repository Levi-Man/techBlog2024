<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
 <div class="comments-section">

{{!-- Comment Form --}}
  <form class="comment-form" id="addCommentForm">
    <div class="form-group">
      <label for="comment">Add a Comment:</label>
      <textarea class="form-input" id="comment" name="comment" rows="3" required></textarea>
    </div>

    <div class="form-group">
      <button type="button" class="btn btn-primary" onclick="submitComment()">Add Comment</button>
    </div>
  </form>
</div>

{{!-- Comment section --}}
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
      <div class="comment">
        <p>{{comment.user.name}}: {{comment.comment}}</p>
      </div>
    {{/each}}
  </div>
</div>

<script src="/js/comment.js"></script>